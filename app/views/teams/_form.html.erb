<%= form_with model: @team do |form| %>
  <div class="form-group">
    <%= form.label :fencer1 %><br>
    <%= form.select :fencer1, options_from_collection_for_select(@fencers, 'id', 'name', @team.fencers.first&.id), {}, { class: 'form-control' } %>
    <% @team.errors.full_messages_for(:fencer1).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :fencer2 %><br>
    <%= form.select :fencer2, options_from_collection_for_select(@fencers, 'id', 'name', @team.fencers.second&.id), {}, { class: 'form-control' } %>
    <% @team.errors.full_messages_for(:fencer2).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
