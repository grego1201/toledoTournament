<h1> Classification </h1>

<div class='table-responsive'>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class='table-primary'>
        <th scope="col">Position </th>
        <th scope="col">Team</th>
        <th scope="col">Fencers</th>
        <th scope="col">V/M</th>
        <th scope="col">TD-TR</th>
        <th scope="col">TD</th>
      </tr>
    </thead>
    <tbody>
      <% @classification.each_with_index do |value, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to "#{value.first} #{@team_names_by_id[value.first.to_i]}", team_path(value.first) %></td>
          <td><%= team_fencer_names(value.first) %></td>
          <td><%= value.second.first %></td>
          <td><%= value.second.second %></td>
          <td><%= value.second.third %></td>
        </ tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Export as file (pdf)', export_classification_file_path, method: :post %>
